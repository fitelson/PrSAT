# Correct MIME type for WebAssembly
AddType application/wasm .wasm

# Enable SharedArrayBuffer (required for Z3 threading)
# These headers enable cross-origin isolation
<IfModule mod_headers.c>
    Header set Cross-Origin-Opener-Policy "same-origin"
    Header set Cross-Origin-Embedder-Policy "require-corp"
    Header set Cross-Origin-Resource-Policy "cross-origin"

    # Allow service worker broader scope
    <Files "coi-serviceworker.js">
        Header set Service-Worker-Allowed "/"
    </Files>
</IfModule>

# Disable caching during testing
<FilesMatch "\.(js|css|wasm|html)$">
    <IfModule mod_headers.c>
        Header set Cache-Control "no-cache, no-store, must-revalidate"
    </IfModule>
</FilesMatch>
